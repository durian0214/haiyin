<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/activity_base" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_salesman_change_phone_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />

        <EditText
            android:id="@+id/edt_salesman_change_phone_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_salesman_change_phone_phone_label"
            android:background="@color/white"
            android:gravity="right"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:maxLength="11"
            android:lines="1"
            android:inputType="number"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#F5F5F5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_salesman_change_phone_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
        <Button
            android:id="@+id/btn_salesman_change_phone_getcode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_button"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
        <EditText
            android:id="@+id/edt_salesman_change_phone_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_salesman_change_phone_code_label"
            android:background="@color/white"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_salesman_change_phone_getcode"
            android:hint="请输入验证码"
            android:lines="1"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginRight="10dp"
            android:maxLength="5"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#F5F5F5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_salesman_change_phone_new_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="新的手机号"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />

        <EditText
            android:id="@+id/edt_salesman_change_phone_new_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_salesman_change_phone_new_phone_label"
            android:background="@color/white"
            android:gravity="right"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入新的手机号"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#F5F5F5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_salesman_information_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</LinearLayout>


