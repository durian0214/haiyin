<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ll_item_demand_hall"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_item_demand_hall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019第七届湖北(武汉)"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_demand_hall_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:lines="1"
            android:text="121100.00"
            android:textColor="#FF651B"
            android:textSize="@dimen/size_18sp" />

        <TextView
            android:id="@+id/tv_item_demand_hall_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_demand_hall_name"
            android:layout_weight="2"
            android:lines="1"
            android:text="项目工期"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_demand_hall_classification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableLeft="@mipmap/demand_hall_classification"
            android:drawablePadding="5dp"
            android:lines="1"
            android:text="展台搭建，木工班组"
            android:textColor="#999999"
            android:textSize="@dimen/size_10sp" />

        <TextView
            android:id="@+id/tv_item_demand_hall_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_demand_hall_name"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/demand_hall_address"
            android:drawablePadding="5dp"
            android:lines="1"
            android:text="武汉国际会展中心"
            android:textColor="#999999"
            android:textSize="@dimen/size_10sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_item_demand_hall_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <View
            android:id="@+id/v_item_demand_hall_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5" />

        <Button
            android:id="@+id/btn_item_demand_hall_status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="申请开票"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_item_demand_hall_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="申请开票"
            android:textColor="@color/color_00C1B6"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</LinearLayout>