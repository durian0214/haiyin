<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:background="@mipmap/bank_gs">

    <RelativeLayout
        android:id="@+id/rl_item_card_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tv_item_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他银行"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_card_name"
            android:layout_marginTop="5dp"
            android:text="储蓄卡"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="● ● ● ●"
            android:textColor="#fffa8f8c"
            android:textSize="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="● ● ● ●"
            android:textColor="#fffa8f8c"
            android:textSize="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="● ● ● ●"
            android:textColor="#fffa8f8c"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_item_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3 3 3 3 "
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>