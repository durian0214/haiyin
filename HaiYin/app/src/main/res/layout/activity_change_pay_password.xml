<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_base" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_change_pay_password_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:hint="手机号"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />

        <EditText
            android:id="@+id/edt_change_pay_password_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_change_pay_password_phone_label"
            android:background="@color/white"
            android:gravity="right"
            android:hint="请输入手机号"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#E5E5E5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_change_pay_password_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:hint="验证码"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />


        <Button
            android:id="@+id/btn_change_pay_password_send_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"

            android:background="@drawable/shape_button"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
        <EditText
            android:id="@+id/edt_change_pay_password_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_change_pay_password_code_label"
            android:background="@color/white"
            android:gravity="right"
            android:maxLength="5"
            android:hint="请输入验证码"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:inputType="number"
            android:lines="1"
            android:layout_toLeftOf="@id/btn_change_pay_password_send_code"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#E5E5E5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_change_pay_password_new_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:hint="设置交易密码"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />

        <EditText
            android:id="@+id/edt_change_pay_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_change_pay_password_new_label"
            android:background="@color/white"
            android:gravity="right"
            android:hint="请输入交易密码"
            android:inputType="number"
            android:maxLength="6"
            android:lines="1"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#E5E5E5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_add_card_taxpayers_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:hint="再次确认交易密码"

            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />

        <EditText
            android:id="@+id/edt_change_pay_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_add_card_taxpayers_label"
            android:background="@color/white"
            android:gravity="right"
            android:hint="请输入再次确认交易密码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="6"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#E5E5E5" />

    <Button
        android:id="@+id/btn_change_pay_password_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/shape_button"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>